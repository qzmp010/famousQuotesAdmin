<%- include('partials/header.ejs') %>

<body>
    <div class="d-flex">
        <%- include('partials/nav.ejs') %>

        <div class="flex-grow-1 p-4">

            <h1 class="mb-4">Update/Delete Quotes</h1>

            <div class="list-group">

                <% for (let i = 0; i < quotes.length; i++) { %>

                    <div class="list-group-item d-flex justify-content-between align-items-center">

                        <div>
                            <span class="fw-semibold">"<%= quotes[i].quote %>"</span>

                            <% if (quotes[i].lastName) { %>
                                <span class="text-muted">
                                    â€” <%= quotes[i].firstName %> <%= quotes[i].lastName %>
                                </span>
                            <% } %>
                        </div>

                        <div class="btn-group">

                            <a href="/quote/edit?quoteId=<%= quotes[i].quoteId %>"
                               class="btn btn-sm btn-primary">
                                Update
                            </a>

                            <a href="/quote/delete?quoteId=<%= quotes[i].quoteId %>"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>

                        </div>

                    </div>

                <% } %>

            </div>

        </div>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
</html>
