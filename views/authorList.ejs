<%- include('partials/header.ejs') %>

<body>
    <div class="d-flex">
        <%- include('partials/nav.ejs') %>

        <div class="flex-grow-1 p-4">

            <h1 class="mb-4">Update/Delete Authors</h1>

            <div class="list-group">

                <% for (let i = 0; i < authors.length; i++) { %>

                    <div class="list-group-item d-flex justify-content-between align-items-center">

                        <div>
                            <strong><%= authors[i].firstName %> <%= authors[i].lastName %></strong>
                        </div>

                        <div class="btn-group">

                            <a href="/author/edit?authorId=<%= authors[i].authorId %>"
                               class="btn btn-sm btn-primary">
                                Update
                            </a>

                            <a href="/author/delete?authorId=<%= authors[i].authorId %>"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>

                        </div>

                    </div>

                <% } %>

            </div>

        </div>
    </div>
</body>
</html>
